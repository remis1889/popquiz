<%= render 'shared/nav' %>

<%= render 'shared/header', class_name1: 'inactive', class_name2: 'active' %>

<%= render 'shared/survey_content', survey: @survey, class_name: "inactive" %>

<hr>

  <div class="sub-heading">Add a Number Range Question:</div>

  <div class="form-container">

    <%= form_for [@survey, @nrq] do |f| %>

      <%= f.label :question_text, 'What is your question?' %>
      <%= f.text_field :question_text, placeholder: 'eg. "How many times per day do you blink?"'%>

      <div class="form-row">
        <div class="response-count">What is the Minimum Range Value?</div>
        <%= f.select(:min, (1..5)) %>
      </div>

      <div class="form-row">
        <div class="response-count">What is the Maximum Range Value?</div>
        <%= f.select(:max, (6..10)) %>
      </div>

      <div class="form-row">
        <div class="response-count">Is the question required?</div>

        <div class="option">
          <%= f.radio_button :required, 'true', checked: true %>
          <%= f.label :required, 'Yes', value: 'true' %>
        </div>

        <div class="option">
          <%= f.radio_button :required, 'false' %>
          <%= f.label :required, 'No', value: 'false' %>
        </div>
      </div>

      <%= f.submit "Add Question", class: 'btn btn-primary btn-lg btn-block' %>

    <% end %>

  </div>

<hr>

<%= render 'shared/existing_questions', class_name: "inactive"  %>
